<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Team Data</title>
  <link rel="stylesheet" href="css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="main">
    <%- include('partials/header') %>
    <div class="content">
        <h1>Members</h1>
        <button id="downloadCSV">Download CSV</button>
        <button><a href="/create-member">Add Member</a></button>
        <table class="styled-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>email</th>
                <th>gender</th>
                <th>team_id</th>
                <th>Created At</th>
                <th>Updated At</th>
            </tr>
            </thead>
            <tbody>
            <% array.forEach(member => { %>
                <tr>
                <td><%= member.member_id %></td>
                <td><%= member.name %></td>
                <td><%= member.email %></td>
                <td><%= member.gender %></td>
                <td><%= member.team_id %></td>
                <td><%= member.created_at %></td>
                <td><%= member.updated_at %></td>
                
                <td>
                    <form action="/view-member/<%= member.member_id%>" method="GET">
                    <button type="submit">View</button>
                    </form>
                    </td>
                <td>
                    <form action="/update-member/<%= member.member_id%>" method="GET">
                    <button type="submit">Update</button>
                    </form>
                    </td>
                    <td>
                    <form action="/delete-member/<%= member.member_id%>" method="post">
                    <button type="submit">Delete</button>
                    </form>
                </td>
            <% }); %>
            
            </tbody>
        </table>
    </div>
    </div>
    <script>
        // JavaScript function to generate CSV data for member table
        function generateCSV() {
          const rows = document.querySelectorAll('.styled-table tbody tr');
          const csvData = [];
      
          // Iterate through table rows and collect member data while excluding the last three cells
          rows.forEach(row => {
            const rowData = Array.from(row.querySelectorAll('td:not(:nth-last-child(-n+3))')).map(cell => cell.textContent);
            csvData.push(rowData.join(','));
          });
      
          return csvData.join('\n');
        }
      
        // Add an event listener to the download button
        document.getElementById('downloadCSV').addEventListener('click', () => {
        
          const csvContent = generateCSV();
      
          // Create a Blob containing the CSV data
          const blob = new Blob([csvContent], { type: 'text/csv' });
      
          // Create a URL for the Blob
          const url = URL.createObjectURL(blob);
      
          // Create an invisible anchor element to trigger the download
          const a = document.createElement('a');
          a.href = url;
          a.download = 'members.csv'; // Set the filename
          a.style.display = 'none';
      
          // Append the anchor element to the document and trigger the click event
          document.body.appendChild(a);
          a.click();
      
          // Clean up by revoking the Blob URL
          URL.revokeObjectURL(url);
          document.body.removeChild(a);
        });
      </script>         
</body>
</html>
