<script>
    // Dummy data for four crops
    const xValues = [50, 60, 70, 80, 90, 100, 110, 120, 130, 140, 150];
    const maizeYValues = [7, 8, 8, 9, 9, 9, 10, 11, 14, 14, 15];
    const nutsYValues = [15, 14, 13, 12, 10, 9, 9, 8, 7, 7, 6];
    const bananasYValues = [10, 11, 12, 12, 13, 14, 15, 15, 14, 13, 12];
    const beansYValues = [8, 8, 9, 10, 11, 12, 13, 14, 14, 13, 12];

    // Function to create a chart
    function createChart(chartId, dataValues, cropName) {
      new Chart(chartId, {
        type: "line",
        data: {
          labels: xValues,
          datasets: [
            {
              fill: false,
              lineTension: 0,
              backgroundColor: "rgba(0, 0, 255, 1.0)",
              borderColor: "rgba(0, 0, 255, 0.1)",
              data: dataValues,
            },
          ],
        },
        options: {
          legend: { display: false },
          scales: {
            yAxes: [
              {
                ticks: {
                  min: Math.min(...dataValues) - 1,
                  max: Math.max(...dataValues) + 1,
                },
              },
            ],
          },
        },
      });
    }

    createChart("maizeChart", maizeYValues, "Maize");
    createChart("nutsChart", nutsYValues, "Nuts");
    createChart("bananasChart", bananasYValues, "Bananas");
    createChart("beansChart", beansYValues, "Beans");

    // JavaScript code to create and customize the pie chart
    const data = {
      labels: ["Males", "Females"],
      datasets: [
        {
          data: [65, 35],
          backgroundColor: ["#36A2EB", "#FFCE56"],
        },
      ],
    };

    const ctx = document.getElementById("pieChart").getContext("2d");
    new Chart(ctx, {
      type: "pie",
      data: data,
      options: {
        responsive: true,
        maintainAspectRatio: false,
      },
    });
  </script>